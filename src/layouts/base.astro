---
import type { Frontmatter } from '../config'
import SEO from '../components/seo.astro'
import Gallery from '../components/gallery.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'

export interface Props {
  frontmatter: Frontmatter
}

const { frontmatter } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href={`${Astro.site}favicon.ico`} sizes="any" />
    <link rel="icon" href={`${Astro.site}favicon.svg`} type="image/svg+xml" />
    <link rel="apple-touch-icon" href={`${Astro.site}apple-touchicon.png`} />
    <link rel="manifest" href={`${Astro.site}site.webmanifest`} />
    <link rel="sitemap" href={`${Astro.site}sitemap-indexxml`} />
    <link rel="alternate" type="application/rss+xml" title="RSS" href={`${Astro.site}rss.xml`} />
    <meta name="generator" content={Astro.generator} />
    <SEO frontmatter={frontmatter} />
    <script is:inline>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
    <style is:global>
      [x-cloak] { display: none !important; }
      .markmap > svg {
        width: 100%;
        height: 400px;
      }

      .text-gradient {
        @apply bg-gradient-to-r from-rose-500 to-orange-500 bg-clip-text text-transparent;
      }

      .bg-gradient {
        @apply bg-gradient-to-r from-orange-500 to-rose-500;
      }

      .bg-gradient-dark {
        @apply bg-gradient-to-r from-slate-900 to-slate-700;
      }

      .bg-gradient-poppy {
        @apply bg-gradient-to-r from-rose-400 to-red-500;
      }

      p {
        /* @apply text-master-text-100; */
      }

      a {
        @apply text-gradient;
      }

      /* For all the link we are goin to add a yellow border */
      .rpgButton {
            @apply border-yellow-500;
            @apply border-2;
            @apply rounded;
            @apply p-2;
            @apply text-yellow-500;
            @apply bg-gray-900;
        }
        .rpgButton:hover {
            @apply transform;
            @apply scale-105;
            @apply transition-all;
            @apply duration-500;
        }
    </style>
    {frontmatter.extra?.includes('math') &&
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.7/dist/katex.min.css" integrity="sha384-3UiQGuEI4TTMaFmGIZumfRPtfKQ3trwQE2JgosJxCnGmQpL/lJdjpcHkaaFwHlcI" crossorigin="anonymous">
    }
    <slot name="in-head" />

    </head>
    <body class="dark:bg-gray-900">
      {frontmatter.extra?.includes('mermaid') &&
        <script type="module">
          import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@9/dist/mermaid.esm.min.mjs';
          mermaid.initialize({startOnLoad: true});
        </script>
      }
      <Header />
      <slot />
      {frontmatter.gallery && <Gallery folder={frontmatter.gallery} />}
      <slot name="before-footer" />
      <Footer />
      {frontmatter.extra?.includes('markmap') &&
        <script src="https://cdn.jsdelivr.net/npm/markmap-autoloader"></script>
      }
  </body>
</html>
