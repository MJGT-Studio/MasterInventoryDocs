---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'
import Categories from '../components/categories.astro'
import { DefaultImage } from '../config'
import LinkButton from './buttonLinkCartoon.astro'

export interface Props {
    posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props

const newestPost = posts[0]
const otherPosts = posts.slice(1, 5)
---

<div class="bg-gradient">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl py-8 sm:py-12 lg:max-w-none lg:py-16">
            <div class="flex flex-row items-center gap-4">
                <h2
                    class="text-2xl font-extrabold text-white md:text-4xl">
                    Latest Releases
                </h2>
                <LinkButton text="All Articles" href={import.meta.env.BASE_URL + 'blog'} />
                <LinkButton text="Categories" href={import.meta.env.BASE_URL + 'categories'} />
                <LinkButton text="Tags" href={import.meta.env.BASE_URL + 'tags'} />
            </div>
            <div
                class="mt-6 space-y-12 lg:grid lg:grid-cols-2 lg:gap-x-6 lg:space-y-0 xl:grid-cols-3">
                <div class="relative mb-4 block rounded p-4 lg:mb-0 lg:p-0 xl:col-span-2">
                    <a href={import.meta.env.BASE_URL + 'blog/' + newestPost.slug}>
                        <span class="sr-only">{newestPost.data.title}</span>
                        {
                            newestPost.data.coverSVG ? (
                                <img
                                    src={newestPost.data.coverSVG.src}
                                    alt={newestPost.data.title + ' featured image'}
                                    class="h-64 w-full rounded-md bg-rose-100 object-cover dark:bg-rose-800 md:h-80"
                                    loading="lazy"
                                />
                            ) : (
                                <Image
                                    src={
                                        newestPost.data.coverImage ||
                                        newestPost.data.socialImage ||
                                        DefaultImage
                                    }
                                    alt={newestPost.data.title + ' featured image'}
                                    class="h-64 w-full rounded-md bg-rose-100 object-cover dark:bg-rose-800 md:h-80"
                                    loading="lazy"
                                />
                            )
                        }
                    </a>
                    <div class="mt-4">
                        {
                            newestPost.data.categories && (
                                <Categories categories={newestPost.data.categories} />
                            )
                        }
                    </div>
                    <a href={import.meta.env.BASE_URL + 'blog/' + newestPost.slug}>
                        <h1
                            class="mt-2 text-4xl font-bold leading-tight text-white dar:text-black">
                            {newestPost.data.title}
                        </h1>
                    </a>
                    <p class="mb-4 text-white">
                        {newestPost.data.publishDate?.toDateString()}
                    </p>
                    <p class="mb-4 text-white">
                        {newestPost.data.description}
                    </p>
                    <LinkButton text="Read more" href={import.meta.env.BASE_URL + 'blog/' + newestPost.slug} />
                </div>
                <div class="w-full">
                    {
                        otherPosts.map((post) => (
                            <div class="mb-10 w-full rounded md:grid md:grid-cols-3">
                                <a
                                    href={
                                        new URL(
                                            import.meta.env.BASE_URL + 'blog/' + post.slug,
                                            Astro.url
                                        )
                                    }>
                                    {post.data.coverSVG ? (
                                        <img
                                            src={post.data.coverSVG.src}
                                            alt={post.data.title + ' featured image'}
                                            class="block h-64 w-full rounded-md bg-rose-100 object-cover p-4 dark:bg-rose-800 md:h-32 md:p-0 lg:block"
                                            loading="lazy"
                                        />
                                    ) : (
                                        <Image
                                            src={
                                                post.data.coverImage ||
                                                post.data.socialImage ||
                                                DefaultImage
                                            }
                                            alt={post.data.title + ' featured image'}
                                            class="block h-64 w-full rounded-md bg-rose-100 object-cover p-4 dark:bg-rose-800 md:h-32 md:p-0 lg:block"
                                            loading="lazy"
                                        />
                                    )}
                                </a>
                                <div class="rounded bg-white px-4 dark:bg-gray-800 md:col-span-2">
                                    {post.data.categories && (
                                        <Categories categories={post.data.categories} />
                                    )}
                                    <a href={import.meta.env.BASE_URL + 'blog/' + post.slug}>
                                        <div class="text-xl font-semibold text-gray-800 dark:text-gray-100 md:mt-1">
                                            {post.data.title}
                                        </div>
                                    </a>
                                    <p class="block text-sm text-gray-600 dark:text-gray-300">
                                        {post.data.publishDate?.toDateString()}
                                    </p>
                                    <p class="block text-sm text-gray-600 dark:text-gray-300 md:hidden">
                                        {post.data.description}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</div>
